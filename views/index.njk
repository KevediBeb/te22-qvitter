{% extends "layout.njk" %}

{% block content %}
    
    <main>
      
        
        
        <img src="/img/shitterlogo.png" alt="logo" height="100vm" width="100vm">
        <h1>Shitter™</h1>
        
        
        <h2>{{ title }}</h2>
        <h3>Logged in as: {{ username }}</h3>
        <form action="/" method="POST">
        
        <button type="submit">Log out</button>
        </form>
        <p>{{ message }}</p>
        <a href="/new">
          <button>Create a Shit™</button>
        </a>
        <ul class="tweets">
          {% for tweet in tweets %}
            <li class="tweet">
              <article>
                <header>
                  <h3>{{ tweet.name }}</h3>
                  <time datetime="{{ tweet.updated_at }}">{{ tweet.updated_at }}</time>
                </header>
                <p>{{ tweet.message }}</p>
                <footer>
                  <ul>
                    
                    {% if username == tweet.name or username == "BebTheGreat" %}
                    <a href="{{ tweet.id }}/edit" class="button-icon">
                      <span class="material-symbols-outlined">
                        Edit
                      </span>
                    </a>
                    <form action="/{{tweet.id}}/delete" method="POST">
        
                      <button type="submit">Delete</button>
                    {% endif %}
                   
                  </form>
                  
                  </ul>
                </footer>
              </article>
            </li>
          {% endfor %}
        </ul>
      </main>
      
{% endblock %}